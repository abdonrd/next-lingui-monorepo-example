    "@vitejs/plugin-react-swc": "^4.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsdown": "^0.15.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.5"
